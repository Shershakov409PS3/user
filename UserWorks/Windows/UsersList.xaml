<Window x:Class="UserWorks.Windows.UsersList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserWorks.Windows"
        mc:Ignorable="d"
        Title="Список пользователей" Height="494.4" Width="861.6"
        Background="Azure"
        MinWidth="861.6"
        MinHeight="494.4"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid/>
        <TextBlock HorizontalAlignment="Center" Margin="0" Text="Пользователи" VerticalAlignment="Center"/>

        <Grid Grid.Row="1">
            <Button Content="Добавить пользователя" HorizontalAlignment="Center" VerticalAlignment="Center" Height="66" Width="249" 
            Name="btnEditUsers" Click="btnCreateUsers_Click"/>
        </Grid>
        <DataGrid Grid.Row="2" Name="diagramUsers" 
          AutoGenerateColumns="False" IsReadOnly="True" 
          HorizontalAlignment="Center" VerticalAlignment="Top">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин" MinWidth="150"
                            Binding="{Binding Login}"/>
                <DataGridTextColumn Header="Роль" MaxWidth="150"
                            Binding="{Binding Role.Title}"/>

                <DataGridTemplateColumn Header="Действие">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Button Content="Изменить" MinWidth="75" Click="btnEdit_Click"/>
                                <Button Content="Удалить" MinWidth="75" Background="#FFE8985A" x:Name="btn_Delete" Click="btn_Delete_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="3">
            <Label Content="" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" x:Name="lbl_countUsers"/>


        </Grid>
        <StackPanel Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="5">
            <TextBlock HorizontalAlignment="Center" Margin="5" Text="Доп. функции" />
            <TextBlock HorizontalAlignment="Center" Margin="5" Text="Сортировка" />
            <DockPanel>
                <TextBlock Text="Поле" VerticalAlignment="Center" Margin="5"/>
                <ComboBox Style="{DynamicResource ComboBoxStyle1}" Name="cmbFields"/>
            </DockPanel>
            <StackPanel Margin="5">
                <RadioButton GroupName="sort" Name="rbUp" Content="А-Я" IsChecked="True"/>
                <RadioButton GroupName="sort" Name="rbDown" Content="Я-А"/>
                <Button x:Name="btn_sort" Content="Сортировка" Click="btn_sort_Click" />
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="Фильтрация"/>
                <CheckBox Name="cb_Filter" Content="вкл/выкл" IsChecked="False" Click="cb_Filter_Click"/>

                <StackPanel x:Name="sp_Filter" Visibility="Collapsed">
                    <TextBlock Text="Строка поиска:" Margin="0,5,0,5"/>
                    <TextBox x:Name="txb_FilterWord" TextChanged="txb_FilterWord_TextChanged"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>