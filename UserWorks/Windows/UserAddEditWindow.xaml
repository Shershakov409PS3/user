<Window x:Class="UserWorks.Windows.UserAddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserWorks.Windows"
        mc:Ignorable="d"
        Title="Регитсрация/Редактирование пользователя" Height="257.6" Width="275.2"
        MinHeight="257.6"
        MinWidth="275.2"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Text="Заголовок" HorizontalAlignment="Center" Name="txb_Title_UserAddEdit"/>
            <TextBlock Text="Логин"/>
            <TextBox Text="" Name="txb_login" IsEnabled="True"/>
            <TextBlock Text="Пароль"/>
            <TextBox Text="" Name="txb_password"/>
            <TextBlock Text="Повторите пароль"/>
            <TextBox Text="" Name="txb_passwordVerifyde"/>
            <TextBlock Text="Роль"/>
            <ComboBox x:Name="comboxRole" DisplayMemberPath="Title"
              SelectedItem="Id" Style="{DynamicResource ComboBoxStyle1}" IsEnabled="True"/>
            <Button Content="Сохранить" Name="btn_SaveUser" Click="btn_SaveUser_Click"/>
            <Button Content="Отмена" Name="btn_cancelSaveUser" Click="btn_cancelSaveUser_Click"/>
        </StackPanel>
    </Grid>
</Window>
